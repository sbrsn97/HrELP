@using HrELP.Application.Models.ViewModels;
@model LeaveListVM

<body>
    <main>
        <div class="new-users text-center">
            <h2>All Leave Requests</h2>
            <h2 style="color:red">@Model.ErrorMessage</h2>
            <div class="user-list mt-4">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Leave Type</th>
                            <th>Leave Days Count</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Create Date</th>
                            <th>Status</th>
                            <th>Delete Request</th>
                        </tr>
                    </thead>
                    <tbody id="allTab">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @foreach (var leaveLists in Model.ApprovedLeaveRequest)
                            {
                                @if (leaveLists != null)
                                {
                                    <tr>
                                        <td>
                                            @leaveLists.LeaveType
                                        </td>
                                        <td>
                                            @leaveLists.LeaveType.DayValue
                                        </td>
                                        <td>
                                            @leaveLists.StartDate
                                        </td>
                                        <td>
                                            @leaveLists.EndDate
                                        </td>
                                        <td>
                                            @leaveLists.CreateDate
                                        </td>
                                        <td>
                                            <span class="material-symbols-outlined text-success">
                                                check_circle
                                            </span>
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                }
                            }
                            @foreach (var leaveLists in Model.DeclinedLeaveRequest)
                            {
                                @if (leaveLists != null)
                                {
                                    <tr>
                                        <td>
                                            @leaveLists.LeaveType
                                        </td>
                                        <td>
                                            @leaveLists.LeaveType.DayValue
                                        </td>
                                        <td>
                                            @leaveLists.StartDate
                                        </td>
                                        <td>
                                            @leaveLists.EndDate
                                        </td>
                                        <td>
                                            @leaveLists.CreateDate
                                        </td>
                                        <td>
                                            <span class="material-symbols-outlined text-danger">
                                                cancel
                                            </span>
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                }
                            }
                            @foreach (var leaveLists in Model.PendingLeaveRequest)
                            {
                                @if (leaveLists != null)
                                {
                                    <tr>
                                        <td>
                                            @leaveLists.LeaveType.LeaveTypeName
                                        </td>
                                        <td>
                                            @leaveLists.LeaveType.DayValue
                                        </td>
                                        <td>
                                            @leaveLists.StartDate
                                        </td>
                                        <td>
                                            @leaveLists.EndDate
                                        </td>
                                        <td>
                                            @leaveLists.CreateDate
                                        </td>
                                        <td>
                                            <span class="material-symbols-outlined text-warning">
                                                hourglass_top
                                            </span>
                                        </td>
                                        <td>
                                            <a class="btn btn-sm btn-outline-danger" asp-controller="Personnel" asp-action="DeleteLeaveRequest" asp-route-id="@leaveLists.Id">
                                                Delete Request
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>


