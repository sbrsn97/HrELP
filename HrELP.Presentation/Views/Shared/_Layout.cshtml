<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/layout.css">
    <title>HrELP Dashboard</title>
    <link rel="shortcut icon" href="/images/HrELPlogominiLight.png" />
</head>
<body>
    <div class="container">
        <!-- Sidebar Section -->
        <aside>
            <div class="toggle">
                <div class="logo">
                    <a asp-controller="User" asp-action="Index" class="text-decoration-none">
                        <img src="/images/HrELPlogominiLight.png" id="logo-img">
                    </a>
                    <a asp-controller="User" asp-action="Index" class="text-decoration-none">
                        <h2><span class="danger">H</span>r<span class="danger">ELP</span></h2>
                    </a>
                </div>
                <div class="close" id="close-btn">
                    <span class="material-icons-sharp">
                        close
                    </span>
                </div>
            </div>

            <div class="sidebar">
                <a asp-controller="User" asp-action="Index" class="text-decoration-none mt-4">
                    <span class="material-symbols-outlined text-black" style="margin-left: -10px">
                        home
                    </span>
                    <h3 class="text-black mt-2">Home</h3>
                </a>
                <hr />
                <div class="accordion" id="accordionExample">
                    <div class="accordion-item border-0">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                <span class="material-symbols-outlined">
                                    person
                                </span>
                                <h3 class="mt-2">&nbsp;&nbsp;&nbsp; Profile</h3>
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <a asp-controller="User" asp-action="Details" class="text-decoration-none">
                                    <span class="material-symbols-outlined">
                                        format_image_left
                                    </span>
                                    <h3>Profile Details</h3>
                                </a>
                                <hr />
                                <a asp-controller="User" asp-action="Edit" class="text-decoration-none">
                                    <span class="material-symbols-outlined">
                                        edit_note
                                    </span>
                                    <h3>Edit Profile</h3>
                                </a>
                                <a></a>
                            </div>
                        </div>
                    </div>
                    <hr />
                    @if (User.IsInRole("Manager"))
                    {
                        <div class="accordion-item border-0">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    <span class="material-symbols-outlined">
                                        assignment_add
                                    </span>
                                    <h3 class="mt-2">&nbsp;&nbsp;&nbsp; Requests</h3>
                                </button>
                            </h2>
                            <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <a asp-controller="Manager" asp-action="ListExpenseRequests" class="text-decoration-none">
                                        <span class="material-symbols-outlined">
                                            assignment_add
                                        </span>
                                        <h3>Expense Requests</h3>
                                    </a>
                                    <hr>
                                    <a asp-controller="Manager" asp-action="ListAdvanceRequests" class="text-decoration-none">
                                        <span class="material-symbols-outlined">
                                            assignment_add
                                        </span>
                                        <h3>Advance Requests</h3>
                                    </a>
                                    <hr>
                                    <a asp-controller="Manager" asp-action="ListLeaveRequests" class="text-decoration-none">
                                        <span class="material-symbols-outlined">
                                            assignment_add
                                        </span>
                                        <h3>Leave Requests</h3>
                                    </a>
                                    <a></a>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="accordion-item border-0">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    <span class="material-symbols-outlined">
                                        groups
                                    </span>
                                    <h3 class="mt-2">&nbsp;&nbsp;&nbsp; Personnel Operations</h3>
                                </button>
                            </h2>
                            <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <a asp-controller="Manager" asp-action="AddPersonnel" class="text-decoration-none">
                                        <span class="material-symbols-outlined">
                                            person_add
                                        </span>
                                        <h3>Add Personnel</h3>
                                    </a>
                                    <hr>
                                    <a asp-controller="Manager" asp-action="GetEmployeeList" class="text-decoration-none">
                                        <span class="material-symbols-outlined">
                                            patient_list
                                        </span>
                                        <h3>List Personnels</h3>
                                    </a>
                                    <a></a>
                                </div>
                            </div>
                        </div>
                    }
                    @if (User.IsInRole("Personnel"))
                    {
                        <div class="accordion-item border-0">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    <span class="material-symbols-outlined">
                                        assignment_add
                                    </span>
                                    <h3 class="mt-2">&nbsp;&nbsp;&nbsp; New Requests</h3>
                                </button>
                            </h2>
                            <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <a asp-controller="Personnel" asp-action="FileARequest" class="text-decoration-none">
                                        <span class="material-symbols-outlined">
                                            patient_list
                                        </span>
                                        <h3>Expense Request</h3>
                                    </a>
                                    <hr>
                                    <a asp-controller="Personnel" asp-action="AdvanceRequest" class="text-decoration-none">
                                        <span class="material-symbols-outlined">
                                            patient_list
                                        </span>
                                        <h3>Advance Request</h3>
                                    </a>
                                    <hr>
                                    <a asp-controller="Personnel" asp-action="CreateLeaveRequest" class="text-decoration-none">
                                        <span class="material-symbols-outlined">
                                            patient_list
                                        </span>
                                        <h3>Leave Request</h3>
                                    </a>
                                    <a></a>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="accordion-item border-0">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    <span class="material-symbols-outlined">
                                        assignment_add
                                    </span>
                                    <h3 class="mt-2">&nbsp;&nbsp;&nbsp; My Requests</h3>
                                </button>
                            </h2>
                            <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <a asp-controller="Personnel" asp-action="ListExpenseRequest" class="text-decoration-none">
                                        <span class="material-symbols-outlined">
                                            patient_list
                                        </span>
                                        <h3>My Expense Requests</h3>
                                    </a>
                                    <hr>
                                    <a asp-controller="Personnel" asp-action="ListAdvanceRequest" class="text-decoration-none">
                                        <span class="material-symbols-outlined">
                                            patient_list
                                        </span>
                                        <h3>My Advance Requests</h3>
                                    </a>
                                    <hr>
                                    <a asp-controller="Personnel" asp-action="ListLeaveRequests" class="text-decoration-none">
                                        <span class="material-symbols-outlined">
                                            patient_list
                                        </span>
                                        <h3>My Leave Requests</h3>
                                    </a>
                                    <a></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <hr />
                <a asp-controller="User" asp-action="Logout" class="text-decoration-none">
                    <span class="material-icons-sharp text-black" style="margin-left: -10px">
                        logout
                    </span>
                    <h3 class="text-black">Logout</h3>
                </a>
            </div>
        </aside>
        <!-- End of Sidebar Section -->
        <!-- Main Content -->
        <!-- End of Main Content -->
        <div class="main-panel border-1">
            @RenderBody()
        </div>
        <!-- Right Section -->
        <div class="right-section">
            <div class="nav">
                @*  <button id="menu-btn">
                <span class="material-icons-sharp">
                menu
                </span>
                </button>
                <div class="dark-mode" id="darkModeToggle">
                <span class="material-icons-sharp active">
                light_mode
                </span>
                <span class="material-icons-sharp">
                dark_mode
                </span>
                </div> *@
                @{
                    var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName");
                    var userRole = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
                    var photo = HttpContextAccessor.HttpContext.Session.GetString("Photo");
                }
                <div class="profile">
                    <div class="info">
                        <p>Hey, <b>@userName</b></p>
                        <small class="text-muted">@userRole</small>
                    </div>
                    <div class="profile-photo" id="profilePhoto">
                        <img src="~/images/profilepic/@photo" alt="Profile Photo" />
                    </div>
                </div>
                <div class="dropdown-menu" id="profileDropdown">
                    <a class="dropdown-item" asp-controller="User" asp-action="Edit">
                        <i class="ti-settings text-primary"></i>
                        Edit Profile
                    </a>
                    <a asp-controller="User" asp-action="Logout" class="dropdown-item">
                        <i class="ti-power-off text-primary"></i>
                        Logout
                    </a>
                </div>
            </div>
            <!-- End of Nav -->
        </div>
    </div>
    <!-- main-panel ends -->
    <!-- page-body-wrapper ends -->
</body>

<script src="~/js/layout.js"></script>
<script src="~/js/get-employee-list.js"></script>
</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
