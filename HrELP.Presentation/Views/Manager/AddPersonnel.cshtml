                                        {
                                            <option value="@position">@position</option>
                                        }
                                    </select>
                                    <div class="arrow"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="form3Examplev2">First name</label>
