<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#form3Examplev2, #form3Examplev3, #form3Examplev4, #BirthPlace").on("input", function () {
            var regex = /^[a-zA-ZğüşöçıĞÜŞÖÇİ\s]*$/;
            var inputValue = $(this).val();
            if (!regex.test(inputValue)) {
                $(this).val(inputValue.replace(/[^a-zA-ZğüşöçıĞÜŞÖÇİ\s]/g, ''));

                $("#myModal").show();
            } else {

                $("#myModal").hide();
            }
        });


        $(".close").click(function () {
            $("#myModal").hide();
        });
    });

    $(document).ready(function () {

        $("#Salary, #zip, #IdentityNumber, #PhoneNumber").on("input", function () {
            var regex = /^[0-9]*$/;
            var inputValue = $(this).val();
            if (!regex.test(inputValue)) {
                $(this).val(inputValue.replace(/[^0-9]/g, ''));

                $("#myModal1").show();
            } else {

                $("#myModal1").hide();
            }
        });


        $(".close1").click(function () {
            $("#myModal1").hide();
        });
    });

    $(document).ready(function () {
        $("#IdentityNumber").on("input", function () {
            var inputValue = $(this).val();
            var isNumeric = /^\d+$/.test(inputValue);
            var isValidLength = inputValue.length === 11;
            var doesNotStartWithZero = inputValue.charAt(0) !== '0';

            if (!isNumeric) {

                $("#myModal1").show();
                $(this).addClass("is-invalid");
            }
            else if (!doesNotStartWithZero) {

                $("#myModal2").show();
                $(this).addClass("is-invalid");
            }
            else if (!isValidLength) {

                $("#myModal3").show();
                $(this).addClass("is-invalid");
            }
            else {
                $("#myModal1, #myModal2, #myModal3").hide();
                $(this).removeClass("is-invalid");
            }
        });
        $(".close1, .close2, .close3").click(function () {
            $("#myModal1, #myModal2, #myModal3").hide();
        });

    });

    $(document).ready(function () {
        $("#zip").on("input", function () {
            var inputValue = $(this).val();
            var isNumeric = /^\d+$/.test(inputValue);
            var isValidLength = inputValue.length === 5;
            var firstTwoDigits = inputValue.slice(0, 2);
            var isInRange = parseInt(firstTwoDigits) >= 0 && parseInt(firstTwoDigits) <= 82;

            if (!isNumeric || !isValidLength || !isInRange) {
                if (!isNumeric) {
                    $("#myModal1").show();
                } else if (!isValidLength) {
                    $("#myModal4").show();
                } else if (!isInRange) {

                    $("#myModal5").show();
                }

                $(this).addClass("is-invalid");
            } else {
                $("#myModal1, #myModal4, #myModal5").hide();
                $(this).removeClass("is-invalid");
            }
        });

        $(".close1,.close4,.close5").click(function () {
            $("#myModal1, #myModal4, #myModal5").hide();
        });
    });

    $(document).ready(function () {
        $("#BirthDate").change(function () {
            var inputDate = new Date($(this).val());
            var currentDate = new Date();
            var minimumAgeDate = new Date();
            minimumAgeDate.setFullYear(minimumAgeDate.getFullYear() - 15);

            if (inputDate > currentDate || inputDate > minimumAgeDate || (inputDate.getFullYear() < 1950)) {
                $("#birthDateErrorModal").show();
                $(this).addClass("is-invalid");

            } else {
                $("#birthDateErrorModal").hide();
                $(this).removeClass("is-invalid");
            }
        });

        $(".close6").click(function () {
            $("#birthDateErrorModal").hide();
        });
    });

    $(document).ready(function () {
        $("#CityDropdown").change(function () {
            var selectedCity = $(this).val();
            $.ajax({
                url: "/User/GetTownsForCity",
                type: "GET",
                dataType: "json",
                data: { city: selectedCity },
                success: function (data) {
                    $("#TownDropdown").empty();
                    $.each(data, function (i, town) {
                        $("#TownDropdown").append('<option value="' + town.value + '">' + town.text + '</option>');
                    });
                }
            });
        });
    });

    $(document).ready(function () {
        $("#TownDropdown").change(function () {
            var selectedTown = $(this).val();
            var selectedCity = $("#CityDropdown").val();
            $.ajax({
                url: "/User/GetDistrictsForTown",
                type: "GET",
                dataType: "json",
                data: { city: selectedCity, town: selectedTown },
                success: function (data) {
                    $("#DistrictDropdown").empty();
                    $.each(data, function (i, district) {
                        $("#DistrictDropdown").append('<option value="' + district.value + '">' + district.text + '</option>');
                    });
                }
            });
        });
    });

    $(document).ready(function () {
        $("#DistrictDropdown").change(function () {
            var selectedDistrict = $(this).val();
            var selectedCity = $("#CityDropdown").val();
            var selectedTown = $("#TownDropdown").val();
            $.ajax({
                url: "/User/GetQuartersForDistrict",
                type: "GET",
                dataType: "json",
                data: { city: selectedCity, town: selectedTown, district: selectedDistrict },
                success: function (data) {
                    $("#QuarterDropdown").empty();
                    $.each(data, function (i, quarter) {
                        $("#QuarterDropdown").append('<option value="' + quarter.value + '">' + quarter.text + '</option>');
                    });
                }
            });
        });
    });
    $(document).ready(function () {

        $('#departmanSelect,#pozisyonSelect,#TownDropdown,#DistrictDropdown,#QuarterDropdown').change(function () {
            if ($(this).val() !== '') {
                $(this).find('option[value=""]').remove();
            }
        });
    });

    document.getElementById('formFile').addEventListener('change', function (event) {
        var file = event.target.files[0];
        var reader = new FileReader();

        reader.onload = function () {
            var img = document.createElement('img');
            img.src = reader.result;
            img.style.maxWidth = '300px'; // Set a maximum width for the displayed image
            document.getElementById('imageContainer').innerHTML = '';
            document.getElementById('imageContainer').appendChild(img);
        }

        reader.readAsDataURL(file);
    });

</script>

