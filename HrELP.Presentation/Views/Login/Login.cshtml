@model LoginDTO

@{
    Layout = null;

}
<link rel="stylesheet" href="/css/login.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
<script src="https://kit.fontawesome.com/ff88bd7802.js" crossorigin="anonymous"></script>

<div class="overlay">
    <div class="page">
        <div class="container">
            <div class="left">
                <div class="login">
                    <img style="margin-left:40px" src="/images/HrELPlogo.png" height="45" />
                    Login
                </div>
                <div class="eula">By logging in you agree the terms and conditions.</div>
            </div>
            <div class="right">
                <svg viewBox="0 0 320 300">
                    <defs>
                        <linearGradient inkscape:collect="always"
                                        id="linearGradient"
                                        x1="13"
                                        y1="193.49992"
                                        x2="307"
                                        y2="193.49992"
                                        gradientUnits="userSpaceOnUse">
                            <stop style="stop-color:#ff00ff"
                                  offset="0"
                                  id="stop876" />
                            <stop style="stop-color:#ff0000"
                                  offset="1"
                                  itemid="stop878" />
                        </linearGradient>
                    </defs>
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <path d="m 40,132.00016 239.99984,-3.2e-4 c 0,0 24.99263,0.79932 25.00016,35.00016 0.008,34.20084 -25.00016,35 -25.00016,35 h -239.99984 c 0,-0.0205 -25,4.01348 -25,38.5 0,34.48652 25,38.5 25,38.5 h 215 c 0,0 20,-0.99604 20,-25 0,-24.00396 -20,-25 -20,-25 h -190 c 0,0 -20,1.71033 -20,25 0,24.00396 20,25 20,25 h 168.57143" />
                    }
                    else
                    {
                        <path d="m 40,120.00016 239.99984,-3.2e-4 c 0,0 24.99263,0.79932 25.00016,35.00016 0.008,34.20084 -25.00016,35 -25.00016,35 h -239.99984 c 0,-0.0205 -25,4.01348 -25,38.5 0,34.48652 25,38.5 25,38.5 h 215 c 0,0 20,-0.99604 20,-25 0,-24.00396 -20,-25 -20,-25 h -190 c 0,0 -20,1.71033 -20,25 0,24.00396 20,25 20,25 h 168.57143" />
                    }
                </svg>
                <div class="form">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="error-message" style="color: red; font-size: 10px">@TempData["ErrorMessage"]</div>
                    }
                    <form method="post" style="width:200px; " asp-controller="Login" asp-action="Login">
                        <label for="UserName">Email</label>
                        <input asp-for="UserName" type="email" id="email" required />
                        <label for="Password">Password</label>
                        <div class="password-input center-horizontal">
                            <input asp-for="Password" type="password" width="200px" id="password" required />
                            <a type="button" id="showPassword">
                                <i class="fa-regular fa-eye"></i>
                            </a>
                        </div>
                        <input type="submit" id="submit" value="Login" />
                    </form>
                    <a asp-action="ForgetPassword" asp-controller="Login" class="forget-password" style="margin-left:60px; text-decoration: none; color: white">Forget Password?</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/login.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var passwordField = document.getElementById("password");
        var showPasswordButton = document.getElementById("showPassword");

        showPasswordButton.addEventListener("click", function () {
            if (passwordField.type === "password") {
                passwordField.type = "text"; // Şifreyi görünür yap
            } else {
                passwordField.type = "password"; // Şifreyi gizle
            }
        });
    });
</script>
